EMA_CHANGE_CALL = point - point1 >= 5 
EMA_CHANGE_PUT = point - point1 <= -5
AWAY_EMA200 = point
BIGDROP = bigdrop
BOTTOMSUPPORT = bottomsupport

var bool call_30_70 = false
if AWAY_EMA200 <= -30 and AWAY_EMA200 >= -70
